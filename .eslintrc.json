{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["wordpress"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "globals": {
    "wp": true,
    "jQuery": true
  },
  "rules": {
    "yoda": "off",
    "space-in-parens": "off",
    "space-unary-ops": "off",
    "lines-around-comment" : "warn",
    "semi": ["warn", "always"],
    "no-trailing-spaces": "warn",
    "vars-on-top": "off"
  }
}
